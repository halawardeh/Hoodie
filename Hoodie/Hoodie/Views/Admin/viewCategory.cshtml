@model IEnumerable<Hoodie.Models.Category>

@{
    ViewData["Title"] = "Category Management";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<!-- Main Content -->
<div class="main-content">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0 text-dark fw-bold">Category Management</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 bg-transparent">
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Admin"><i class="bi bi-house-door"></i> Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Categories</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Add Category Button -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center py-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-tags fs-4 text-primary me-2"></i>
                            <h5 class="mb-0 text-dark">Categories List</h5>
                        </div>
                        <a class="btn btn-primary rounded-pill" asp-action="addCategory">
                            <i class="bi bi-plus-circle me-2"></i> Add New Category
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Categories Table -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">Image</th>
                                        <th>Category Name</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar avatar-md">
                                                        <img src="~/Img/img1/@item.Image"
                                                             class="rounded-2"
                                                             alt="Category Image"
                                                             style="width: 48px; height: 48px; object-fit: cover;">
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-medium">@item.Name</span>
                                            </td>
                                            <td class="text-end pe-4">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-sm btn-outline-primary me-1 rounded"
                                                       asp-action="editCategory"
                                                       asp-route-id="@item.CategoryId"
                                                       data-bs-toggle="tooltip"
                                                       title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-secondary me-1 rounded"
                                                       asp-action="viewCategory"
                                                       asp-route-id="@item.CategoryId"
                                                       data-bs-toggle="tooltip"
                                                       title="View">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-danger rounded"
                                                       asp-action="deleteCategory"
                                                       asp-route-id="@item.CategoryId"
                                                       data-bs-toggle="tooltip"
                                                       title="Delete"
                                                       onclick="return confirm('Are you sure you want to delete this category?');">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        $(document).ready(function(){
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}